<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

	<bean id="hibernateTemplate"
		class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />

		</property>
	</bean>

	<bean
		id="net.sf.brightside.travelsystem.core.persistence.GenericDAO"
		class="net.sf.brightside.travelsystem.core.hibernate.HibernateGenericDAOImpl"
		scope="singleton">
		<property name="sessionFactory" ref="sessionFactory"></property>

	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="annotatedClasses">
			<list>
				<value>
					net.sf.brightside.travelsystem.metamodel.beans.FlightBean
				</value>
				<value>
					net.sf.brightside.travelsystem.metamodel.beans.PassengerBean
				</value>
				<value>
					net.sf.brightside.travelsystem.metamodel.beans.ReservationBean
				</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<ref bean="hibernateProperties" />
		</property>
	</bean>



</beans>
